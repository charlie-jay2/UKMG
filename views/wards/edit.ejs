<!-- views/wards/edit.ejs -->
<%- include('../partials/header') %>
<div class="container mt-5">
    <h1>Edit Ward: <%= ward.name %></h1>
    <form action="/wards/<%= ward._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <label for="name">Ward Name</label>
            <input type="text" name="name" id="name" class="form-control" value="<%= ward.name %>" required>
        </div>
        <div class="form-group">
            <label for="availableBeds">Available Beds</label>
            <input type="number" name="availableBeds" id="availableBeds" class="form-control" value="<%= ward.availableBeds %>" required>
        </div>
        <div class="form-group">
            <label for="activeStaff">Active Staff (comma separated)</label>
            <input type="text" name="activeStaff" id="activeStaff" class="form-control" value="<%= ward.activeStaff.join(', ') %>" required>
        </div>
        <button type="submit" class="btn btn-primary">Update Ward</button>
    </form>
</div>
<%- include('../partials/footer') %>

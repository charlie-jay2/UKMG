<%- include('../partials/header') %>
<div class="container mt-5">
  <h1 class="mb-4">Patient Directory</h1>
  <a href="/patients/new" class="btn btn-primary mb-3">Create New Patient</a>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>Age</th>
        <th>NHS Number</th>
        <th>Condition</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% patients.forEach(patient => { %>
        <tr>
          <td><%= patient.name %></td>
          <td><%= patient.age %></td>
          <td><%= patient.nhsNumber %></td>
          <td><%= patient.condition %></td>
          <td>
            <a href="/patients/<%= patient._id %>" class="btn btn-info btn-sm">View</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
<%- include('../partials/footer') %>
